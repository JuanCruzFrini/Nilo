<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/teal_900</item>
        <item name="colorPrimaryVariant">@color/teal_dark</item>
        <item name="colorAccent">@color/pink_ligth</item>
        <item name="android:colorBackground">@color/material_green_50</item>

        <!-- On API 21+ you can use android:statusBarColor -->
        <item name="colorPrimaryDark">@color/material_green_700</item>
    </style>

    <style name="Theme.Nilo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Nilo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.Nilo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>